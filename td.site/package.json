{
  "name": "owasp-threat-dragon-site",
  "version": "1.3.1",
  "private": false,
  "scripts": {
    "build": "npm run-script bundle && npm run-script bundle-minify && npm run-script bundle-css && npm run-script bundle-minify-css && npm run-script copy-fonts",
    "build:test": "npm-run-all clean copy-fonts copy-images bundle-css minify-css clean-css",
    "copy-fonts": "copyfiles -f ./node_modules/font-awesome/fonts/*.* ./node_modules/bootstrap/dist/fonts/*.* ../dist/fonts",
    "copy-images": "copyfiles -f ./src/content/images/*.* ../dist/content/images",
    "bundle-css": "rework-npm ./src/content/app.css -o ../dist/content/threatdragon.css",
    "minify-css": "uglifycss ./src/content/threatdragon.css > ./src/content/threatdragon.min.css",
    "clean-css": "rimraf ../dist/content/threatdragon.css",
    "copy-app": "copyfiles -f ./src/app/config.exceptionHandler.js ../dist/app",
    "bundle-ng": "browserify ./src/app/app.js -d | exorcist ../dist/app/threatdragon.js.map > ../dist/app/threatdragon.min.js",
    "build:app": "npm-run-all clean copy-app bundle-ng",
    "clean": "rimraf ../dist",





    "bundle-minify-css": "npm run-script bundle-css && npm run-script minify-css",
    "bundle": "browserify --debug ./src/app/app.js | exorcist -o ./src/app/threatdragon.js",
    "bundle-minify": "browserify ./src/app/app.js -d -p [minifyify --map ./src/app/threatdragon.js.map --output ./src/app/threatdragon.js.map ] > ./src/app/threatdragon.min.js",
    "start": "node server.js",
    "pretest": "node ./node_modules/jshint/bin/jshint --verbose --show-non-errors td.site && cd td.server && npm run pretest",
    "test": "npm run-script test-client-firefox && npm run-script test-server",
    "test-client-phantomjs": "./node_modules/.bin/karma start --single-run --browsers PhantomJS",
    "test-client-firefox": "./node_modules/.bin/karma start --single-run --browsers Firefox",
    "test-client-chrome": "./node_modules/.bin/karma start --single-run --browsers Chrome",
    "test-client-ie": "./node_modules/.bin/karma start --single-run --browsers IE",
    "test-local": "npm run-script pretest && npm run-script test-client-chrome && npm run-script test-client-ie && npm run-script test-client-phantomjs && npm run-script test-client-firefox",
    "citest": "./node_modules/.bin/karma start --single-run false --browsers Firefox",
    "codecov": "./node_modules/.bin/codecov"
  },
  "description": "OWASP Threat Dragon - a free, open source threat modelling tool",
  "author": {
    "name": "mike.goodwin",
    "email": "mike.goodwin@owasp.org"
  },
  "license": "Apache-2.0",
  "homepage": "https://threatdragon.github.io/",
  "repository": {
    "type": "git",
    "url": "git://github.com/owasp/threat-dragon.git"
  },
  "dependencies": {
    "angular": "1.8.2",
    "angular-animate": "1.8.2",
    "angular-route": "1.8.2",
    "angular-ui-bootstrap": "2.5.6",
    "angular-xeditable": "^0.10.0",
    "font-awesome": "4.7.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.19",
    "owasp-threat-dragon-core": "^1.3.2",
    "pug": "^2.0.4",
    "pug-bootstrap": "0.0.16"
  },
  "devDependencies": {
    "angular-mocks": "1.8.0",
    "browserify": "^16.3.0",
    "browserify-css": "^0.15.0",
    "browserify-istanbul": "3.0.1",
    "browserify-ng-html2js": "1.3.0",
    "codecov": "^3.6.5",
    "copyfiles": "^2.1.1",
    "debug": "^4.1.1",
    "exorcist": "^2.0.0",
    "istanbul": "0.4.5",
    "jasmine": "^2.99.0",
    "jasmine-core": "^3.4.0",
    "jasmine-jquery": "2.1.1",
    "jasmine-node": "^3.0.0",
    "jasmine-spec-reporter": "4.2.1",
    "jshint": "^2.10.2",
    "karma": "^3.1.4",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-phantomjs-shim": "1.5.0",
    "karma-spec-reporter": "0.0.32",
    "karma-threshold-reporter": "^0.1.15",
    "karma-xml-reporter": "0.1.4",
    "minifyify": "7.3.5",
    "mockery": "2.1.0",
    "npm-run-all": "^4.1.5",
    "phantomjs-polyfill-find": "0.0.1",
    "phantomjs-prebuilt": "2.1.16",
    "requirejs": "^2.3.6",
    "rework-npm-cli": "0.1.3",
    "rimraf": "^2.7.1",
    "uglifycss": "0.0.29",
    "watchify": "^3.11.1"
  }
}
